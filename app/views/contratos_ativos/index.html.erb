<div class="panel panel-default">
    <div class="panel-heading">
        Listando Contratos
        <% if policy(@contratos).new? %>
            <%= link_to new_contrato_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
                <i class="fa fa-plus"></i>
            <% end %>
        <% else %>
            <%= link_to '#', disabled: 'disabled', class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
                <i class="fa fa-plus"></i>
            <% end %>
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="text-center">Numero</th>
                        <th class="text-center">Orgão</th>
                        <th class="text-center">Fornecedor</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Objeto</th>
                        <th class="text-center">Modalidade</th>
                        <th class="text-center">Vigência restante</th>
                        <th class="text-center">Vencimento</th>
                        <th class="text-center">Valor</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @contratos.each do |contrato| %>
                    <tr>
                        <td><%= "#{contrato.numero}/#{contrato.ano}" %></td>
                        <td><%= contrato.entidade.sigla %></td>
                        <td><%= contrato.fornecedor.nome %></td>
                        <td class="text-center">
                            <% if @hoje > contrato.data_venc %>
                                <div class="alert-danger">Finalizado</div>
                            <% else %>
                                <div class="alert-success">Ativo</div>
                            <% end %>
                        </td>
                        <td><%= contrato.objeto %></td>
                        <td><%= contrato.modalidade.descricao %></td>
                        <td>
                            <% @vigencia_rest = contrato.data_venc - @hoje %>
                            <% dt = @vigencia_rest.to_i %>
                            <% if dt > 45 %>
                                <%= dt %> dias
                            <% elsif dt <= 45 and dt > 0 %>
                                <i class="fa fa-exclamation-circle" style="color: red"></i> <%= dt %> dias
                            <% else %>
                                <%= dt %> dias
                            <% end %>
                        </td>
                        <td><%= contrato.data_venc %></td>
                        <td class="text-right"><%= humanized_money_with_symbol contrato.valor %></td>
                        <td style="width: 150px">
                            <% if policy(@contratos).edit? %>
                                <%= link_to edit_contrato_path(contrato), class: "btn btn-primary btn-circle" do %>
                                    <i class="fa fa-edit"></i>
                                <% end %>
                            <% else %>
                                <%= link_to '#', disabled: 'disabled', class:"btn btn-primary btn-circle", style:"margin-top: -5px" do %>
                                    <i class="fa fa-edit"></i>
                                <% end %>
                            <% end %>
                            <% if policy(@contratos).destroy? %>
                                <%= link_to contrato_path(contrato),
                                        method: :delete,
                                        class: "btn btn-danger btn-circle",
                                        data: {confirm: "Você deseja realmente excluir o contrato (<b>#{contrato.numero}/#{contrato.ano}</b>)?"} do %>
                                    <i class="fa fa-minus"></i>
                                <% end %>
                            <% else %>
                                <%= link_to '#', disabled: 'disabled', class:"btn btn-danger btn-circle", style:"margin-top: -5px" do %>
                                    <i class="fa fa-minus"></i>
                                <% end %>
                            <% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            
        </div>
        <!-- /.table-responsive -->
    </div>
        <!-- /.panel-body -->
</div>