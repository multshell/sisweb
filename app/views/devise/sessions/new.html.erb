<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel-default">
                <center>
                    <img src="/imagens/logo-1.png" alt="Logo">
                </center>
                <br>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Fa√ßa o login</h3>
                    </div>
                    <div class="panel-body">
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: "form") do |f| %>
                            <fieldset>
                                <div class="form-group">
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail", type: "email", autofocus: "autofocus" %>
                                </div>
                                <div class="form-group">
                                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", type: "password" %>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <%= f.check_box :remember_me %> Lembrar-me
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <%= f.submit t('.sign_in'), class: "btn btn-lg btn-success btn-block" %>
                                
                            </fieldset>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% flash.each do |key, value| %>
    <script>
        $.notify("<%= alert %>", "info")
    </script>
<% end %>