<h1 class="page-header">Contratos</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        Listando Contratos
        <% if policy(@contratos).new? %>
            <%= link_to new_contrato_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
                <i class="fa fa-plus"></i>
            <% end %>
        <% else %>
            <%= link_to '#', disabled: 'disabled', class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
                <i class="fa fa-plus"></i>
            <% end %>
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Numero</th>
                        <th>Orgão</th>
                        <th>Fornecedor</th>
                        <th>Valor</th>
                        <th>Objeto</th>
                        <th>Modalidade</th>
                        <th>Data Assinatura</th>
                        <th>Data Vencimento</th>
                        <th>Situação</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @contratos.each do |contrato| %>
                    <tr>
                        <td><%= "#{contrato.numero}/#{contrato.ano}" %></td>
                        <td><%= contrato.entidade.sigla %></td>
                        <td><%= contrato.fornecedor.nome %></td>
                        <td><%= humanized_money_with_symbol contrato.valor %></td>
                        <td><%= contrato.objeto %></td>
                        <td><%= contrato.modalidade.descricao %></td>
                        <td><%= contrato.data_ass %></td>
                        <td><%= contrato.data_venc %></td>
                        <td>
                            <% if @hoje > contrato.data_venc %>
                                Vencido
                            <% else %>
                                No Prazo
                            <% end %>
                        </td>
                        <td style="width: 150px">
                            <% if policy(@contratos).edit? %>
                                <%= link_to edit_contrato_path(contrato), class: "btn btn-primary btn-circle" do %>
                                    <i class="fa fa-edit"></i>
                                <% end %>
                            <% else %>
                                <%= link_to '#', disabled: 'disabled', class:"btn btn-primary btn-circle", style:"margin-top: -5px" do %>
                                    <i class="fa fa-edit"></i>
                                <% end %>
                            <% end %>
                            <% if policy(@contratos).destroy? %>
                                <%= link_to contrato_path(contrato),
                                        method: :delete,
                                        class: "btn btn-danger btn-circle",
                                        data: {confirm: "Você deseja realmente excluir o contrato (<b>#{contrato.numero}/#{contrato.ano}</b>)?"} do %>
                                    <i class="fa fa-minus"></i>
                                <% end %>
                            <% else %>
                                <%= link_to '#', disabled: 'disabled', class:"btn btn-danger btn-circle", style:"margin-top: -5px" do %>
                                    <i class="fa fa-minus"></i>
                                <% end %>
                            <% end %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
            
        </div>
        <!-- /.table-responsive -->
    </div>
        <!-- /.panel-body -->
</div>
