<h1 class="page-header">Contratos</h1>

<% if @contrato.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
        <% @contrato.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="panel panel-default">
<div class="panel-heading">
    <%= action %>
</div>
<!-- /.panel-heading -->
<div class="panel-body">
    <div class="col-lg-12">
        <%= form_for(@contrato) do |f| %>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Numero</label>
                <%= f.text_field :numero, class: "form-control", placeholder: "Numero do Contrato"  %>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Ano</label>
                <%= f.text_field :ano, class: "form-control", placeholder: "Ano do Contrato"  %>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Órgão</label>
                <%= f.collection_select :entidade_id, @entidade_options_for_select, :id, :sigla, {}, { class: "form-control", autofocus: true } %>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Fornecedor</label>
                <%= f.collection_select :fornecedor_id, @fornecedor_options_for_select, :id, :nome, {}, { class: "form-control" } %>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Valor</label>
                <%= f.text_field :valor, class: "form-control", placeholder: "Valor do Contrato"  %>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Modalidade</label>
                <%= f.collection_select :modalidade_id, @modalidade_options_for_select, :id, :descricao, {}, { class: "form-control" } %>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Data de Assinatura</label>
                <%= f.date_field :data_ass, class: "form-control", placeholder: "Data de Assinatura do Contrato"  %>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Data de Vencimento</label>
                <%= f.date_field :data_venc, class: "form-control", placeholder: "Data de Vencimento do Contrato"  %>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <label>Objeto</label>
                <%= f.text_area :objeto, class: "form-control", rows: "3", placeholder: "Objeto do Contrato"  %>
            </div>
            <button type="submit" class="btn btn-default">Salvar</button>
        </div>
        <% end %>
    </div>
    
</div>
    <!-- /.panel-body -->
</div>