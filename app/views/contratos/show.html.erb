<h1 class="page-header">Contrato</h1>

<div class="panel panel-default">
<!-- /.panel-heading -->
    <div class="panel-body">
        <div class="col-lg-12">
            <div class="col-lg-12">
                <div class="form-group">
                    <h3><label>Numero:</label>
                    <%= "#{@contrato.numero}/#{@contrato.ano}" %></h3>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Órgão:</label>
                    <p class="form-control-static">
                        <%= @contrato.entidade.sigla %>
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Fornecedor:</label>
                    <p class="form-control-static">
                        <%= @contrato.fornecedor.nome %>
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Valor:</label>
                    <p class="form-control-static">
                        <%= humanized_money_with_symbol @contrato.valor %>
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Modalidade:</label>
                    <p class="form-control-static">
                        <%= @contrato.modalidade.descricao %>
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Data de Assinatura:</label>
                    <p class="form-control-static">
                        <%= @contrato.data_ass %>
                    </p>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    <label>Data de Vencimento:</label>
                    <p class="form-control-static">
                        <%= @contrato.data_venc %>
                    </p>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Objeto:</label>
                    <p class="form-control-static">
                        <%= @contrato.objeto %>
                    </p>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Aditivos
                        <% if policy(@contrato).new? %>
                            <%= link_to aditivo_path(@contrato.id), class: "btn btn-success btn-sm pull-right", style: "margin-top: -5px" do %>
                                <i class="fa fa-plus"></i>
                            <% end %>
                        <% else %>
                            <%= link_to '#', disabled: 'disabled', class:"btn btn-success btn-sm pull-right", style:"margin-top: -5px" do %>
                                <i class="fa fa-plus"></i>
                            <% end %>
                        <% end %>
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Número</th>
                                        <th>Tipo</th>
                                        <th>Valor</th>
                                        <th>Data de Assinatura</th>
                                        <th>Data de Vencimento</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% @aditivos.each do |aditivo| %>
                                        <tr>
                                            <td><%= aditivo.numero %></td>
                                            <td><%= aditivo.tipo_aditivo.descricao %></td>
                                            <td><%= aditivo.valor %></td>
                                            <td><%= aditivo.data_ass %></td>
                                            <td><%= aditivo.data_venc %></td>
                                            <td style="width: 100px">
                                                <% if policy(aditivo).edit? %>
                                                    <%= link_to edit_aditivo_path(aditivo), class: "btn btn-primary btn-xs" do %>
                                                        <i class="fa fa-edit"></i>
                                                    <% end %>
                                                <% else %>
                                                    <%= link_to '#', disabled: 'disabled', class:"btn btn-primary btn-xs", style:"margin-top: -5px" do %>
                                                        <i class="fa fa-edit"></i>
                                                    <% end %>
                                                <% end %>
                                                <% if policy(aditivo).destroy? %>
                                                    <%= link_to aditivo_path(aditivo),
                                                            method: :delete,
                                                            class: "btn btn-danger btn-xs",
                                                            data: {confirm: "Você deseja realmente excluir (<b>#{aditivo.numero}</b>)?"} do %>
                                                        <i class="fa fa-minus"></i>
                                                    <% end %>
                                                <% else %>
                                                    <%= link_to '#', disabled: 'disabled', class:"btn btn-danger btn-xs", style:"margin-top: -5px" do %>
                                                        <i class="fa fa-minus"></i>
                                                    <% end %>
                                                <% end %>
                                            </td>
                                        </tr>
                                    <% end %>
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
            <div class="col-lg-12">
                <% if policy(@contrato).edit? %>
                    <%= link_to edit_contrato_path(@contrato), class: "btn btn-primary" do %>
                        Editar
                    <% end %>
                <% else %>
                    <%= link_to '#', disabled: 'disabled', class: "btn btn-primary" do %>
                        Editar
                    <% end %>
                <% end %>
                <%= link_to contratos_path, class: "btn btn-default" do %>
                    Voltar
                <% end %>
            </div>
        </div>
        
    </div>
    <!-- /.panel-body -->
</div>