<h1 class="page-header">Órgãos</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            Listando Órgãos
            <% if policy(@entidades).new? %>
                <%= link_to new_entidade_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            <% else %>
                <%= link_to '#', disabled: 'disabled', class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            <% end %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Sigla</th>
                            <th>Nome</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @entidades.each do |entidade| %>
                        <tr>
                            <td><%= entidade.id %></td>
                            <td><%= entidade.sigla %></td>
                            <td><%= entidade.nome %></td>
                            <td style="width: 100px">
                                <% if policy(@entidades).edit? %>
                                    <%= link_to edit_entidade_path(entidade), class: "btn btn-primary btn-circle" do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                <% else %>
                                    <%= link_to '#', disabled: 'disabled', class:"btn btn-primary btn-circle", style:"margin-top: -5px" do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                <% end %>
                                <% if policy(@entidades).destroy? %>
                                    <%= link_to entidade_path(entidade),
                                            method: :delete,
                                            class: "btn btn-danger btn-circle",
                                            data: {confirm: "Você deseja realmente excluir (<b>#{entidade.sigla}</b>)?"} do %>
                                        <i class="fa fa-minus"></i>
                                    <% end %>
                                <% else %>
                                    <%= link_to '#', disabled: 'disabled', class:"btn btn-danger btn-circle", style:"margin-top: -5px" do %>
                                        <i class="fa fa-minus"></i>
                                    <% end %>
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
                
            </div>
            <!-- /.table-responsive -->
        </div>
            <!-- /.panel-body -->
        </div>

