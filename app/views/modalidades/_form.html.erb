<h1 class="page-header">Modalidades</h1>

<% if @modalidade.errors.any? %>
<div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
        <% @modalidade.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="panel panel-default">
<div class="panel-heading">
    <%= action %>
</div>
<!-- /.panel-heading -->
<div class="panel-body">
    <div class="col-lg-6">
        <%= form_for(@modalidade) do |f| %>
            <div class="form-group">
                <label>Descrição</label>
                <%= f.text_field :descricao, autofocus: true, class: "form-control", placeholder: "Descrição da Modalidade"  %>
            </div>
            <button type="submit" class="btn btn-default">Salvar</button>
            <%= link_to modalidades_path, class: "btn btn-default" do %>
                Voltar
            <% end %>
        <% end %>
    </div>
    
</div>
    <!-- /.panel-body -->
</div>
