<h1 class="page-header">Modalidades</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            Listando Modalidades
            <% if policy(@modalidades).new? %>
                <%= link_to new_modalidade_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            <% else %>
                <%= link_to '#', disabled: 'disabled', class:"btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
                    <i class="fa fa-plus"></i>
                <% end %>
            <% end %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Descrição</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @modalidades.each do |modalidade| %>
                        <tr>
                            <td><%= modalidade.id %></td>
                            <td><%= modalidade.descricao %></td>
                            <td style="width: 150px">
                                <% if policy(@modalidades).edit? %>
                                    <%= link_to edit_modalidade_path(modalidade), class: "btn btn-primary btn-circle" do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                <% else %>
                                    <%= link_to '#', disabled: 'disabled', class:"btn btn-primary btn-circle", style:"margin-top: -5px" do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                <% end %>
                                <% if policy(@modalidades).destroy? %>
                                    <%= link_to modalidade_path(modalidade),
                                            method: :delete,
                                            class: "btn btn-danger btn-circle",
                                            data: {confirm: "Você deseja realmente excluir (<b>#{modalidade.descricao}</b>)?"} do %>
                                        <i class="fa fa-minus"></i>
                                    <% end %>
                                <% else %>
                                    <%= link_to '#', disabled: 'disabled', class:"btn btn-danger btn-circle", style:"margin-top: -5px" do %>
                                        <i class="fa fa-minus"></i>
                                    <% end %>
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
            <!-- /.panel-body -->
        </div>

