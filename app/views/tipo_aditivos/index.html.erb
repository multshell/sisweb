<h1 class="page-header">Tipos de Aditivos</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        Listando Tipos de Aditivos
        <% if policy(@tipo_aditivos).new? %>
            <%= link_to new_tipo_aditivo_path, class: "btn btn-success btn-sm pull-right", style: "margin-top: -5px" do %>
                <i class="fa fa-plus"></i>
            <% end %>
        <% else %>
            <%= link_to '#', disabled: 'disabled', class:"btn btn-success btn-sm pull-right", style:"margin-top: -5px" do %>
                <i class="fa fa-plus"></i>
            <% end %>
        <% end %>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div>
            <table id="tipo_aditivos" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Descrição</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @tipo_aditivos.each do |tipo_aditivo| %>
                    <tr>
                        <td><%= tipo_aditivo.id %></td>
                        <td><%= tipo_aditivo.descricao %></td>
                        <td width="50">
                            <div class="pull-right">
                                <% if policy(@tipo_aditivos).edit? %>
                                    <%= link_to edit_tipo_aditivo_path(tipo_aditivo), class: "btn btn-primary btn-xs" do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                <% else %>
                                    <%= link_to '#', disabled: 'disabled', class:"btn btn-primary btn-xs" do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                <% end %>
                                <% if policy(@tipo_aditivos).destroy? and tipo_aditivo.aditivos.length == 0 %>
                                    <%= link_to tipo_aditivo_path(tipo_aditivo),
                                            method: :delete,
                                            class: "btn btn-danger btn-xs",
                                            data: {confirm: "Você deseja realmente excluir (<b>#{tipo_aditivo.descricao}</b>)?"} do %>
                                        <i class="fa fa-minus"></i>
                                    <% end %>
                                <% else %>
                                    <%= link_to '#', disabled: 'disabled', class:"btn btn-danger btn-xs" do %>
                                        <i class="fa fa-minus"></i>
                                    <% end %>
                                <% end %>
                            </div>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
        <!-- /.panel-body -->
</div>