<h1 class="page-header">Usuários</h1>

    <% if @user.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="panel panel-default">
        <div class="panel-heading">
            <%= action %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="col-lg-6">
                <%= form_for(@user) do |f| %>
                    <div class="form-group">
                        <label>Nome</label>
                        <%= f.text_field :name, class: "form-control", placeholder: "Nome do usuário"  %>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <%= f.text_field :email, class: "form-control", placeholder: "Email do usuário"  %>
                    </div>
                    <div class="form-group">
                        <label>Tipo de Acesso</label>
                        <%#= f.text_field :role, class: "form-control", placeholder: "Role do usuário"  %>
                        <%= f.collection_radio_buttons(:role, options_for_roles, :id, :description) do |b| %>
                            <div class="radio">
                                <%= b.label { b.radio_button + b.text} %>
                            </div>
                        <% end %>
                    </div>
                    <div class="form-group">
                        <label>Senha</label>
                        <%= f.password_field :password, class: "form-control", placeholder: "Senha"  %>
                    </div>
                    <div class="form-group">
                        <label>Confirmação da Senha</label>
                        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Senha"  %>
                    </div>
                    <button type="submit" class="btn btn-default">Salvar</button>
                    <%= link_to users_path, class: "btn btn-default" do %>
                        Voltar
                    <% end %>
                <% end %>
            </div>
            
        </div>
            <!-- /.panel-body -->
        </div>
