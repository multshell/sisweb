<h1 class="page-header">Usuários</h1>

    <div class="panel panel-default">
        <div class="panel-heading">
            Listando Usuários
            <%= link_to new_user_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
                <i class="fa fa-plus"></i>
            <% end %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nome</th>
                            <th>Email<%#= @users.model.human_attribute_name('name') %></th>
                            <th><%= @users.model.human_attribute_name('role') %></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @users.each do |user| %>
                        <tr>
                            <td><%= user.id %></td>
                            <td><%= user.name %></td>
                            <td><%= user.email %></td>
                            <td><%#= user.role_i18n %></td>
                            <td style="width: 150px">
                                <%= link_to edit_user_path(user), class: "btn btn-primary btn-circle" do %>
                                    <i class="fa fa-edit"></i>
                                <% end %>
                                <% if current_user.id != user.id %>
                                    <%= link_to user_path(user),
                                                method: :delete,
                                                class: "btn btn-danger btn-circle",
                                                data: {confirm: "Você deseja realmente excluir (<b>#{user.email}</b>)?"} do %>
                                        <i class="fa fa-minus"></i>
                                    <% end %>
                                <% else %>
                                    <%= link_to '#',
                                                disabled: "disable",
                                                class: "btn btn-danger btn-circle" do %>
                                        <i class="fa fa-minus"></i>
                                    <% end %>
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
            <!-- /.panel-body -->
        </div>
